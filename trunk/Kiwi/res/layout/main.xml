<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/main"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:id="@+id/header"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@color/lightgrey"
android:padding="2px"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
>
<EditText
android:id="@+id/value2"
android:editable="false"
android:cursorVisible="false"
android:gravity="right"
android:layout_width="0px"
android:layout_height="wrap_content"
android:text="0,69 NZD"
android:textSize="18sp"
android:layout_weight="50"
>
</EditText>
<TextView
android:id="@+id/equalSign"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="10px"
android:text="="
android:textSize="18sp"
android:textStyle="bold"
android:textColor="@color/black"
>
</TextView>
<EditText
android:id="@+id/value1"
android:editable="false"
android:cursorVisible="false"
android:gravity="right"
android:layout_width="0px"
android:layout_height="wrap_content"
android:text="1 EUR"
android:textSize="18sp"
android:layout_weight="50"
>
</EditText>
</LinearLayout>
<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/header"><ScrollView android:id="@+id/sliderule" android:layout_width="match_parent" android:layout_height="match_parent" android:scrollbars="none" android:scrollY="-50px">
<LinearLayout android:id="@+id/scale" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@color/lightgrey" android:paddingBottom="149px" android:paddingTop="149px">
<TextView android:text="1024" android:id="@+id/t1024" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="512" android:id="@+id/t512" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="256" android:id="@+id/t256" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="128" android:id="@+id/t128" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="64" android:id="@+id/t64" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="32" android:id="@+id/t32" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="16" android:id="@+id/t16" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="8" android:id="@+id/t8" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="4" android:id="@+id/t4" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="2" android:id="@+id/t2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>
<TextView android:text="1" android:id="@+id/t1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="60px" android:textColor="@color/black" android:gravity="center_horizontal"></TextView>	
</LinearLayout>

</ScrollView><ImageView android:id="@+id/redLine" android:layout_height="wrap_content" android:src="@drawable/redline" android:clickable="false" android:layout_width="fill_parent" android:layout_centerInParent="true" android:scaleType="fitXY"></ImageView></RelativeLayout>

</RelativeLayout>
